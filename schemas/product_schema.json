{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "specifications": {
                    "type": "object",
                    "properties": {
                        "color": {
                            "type": "string"
                        },
                        "dimensions": {
                            "type": "string"
                        },
                        "wattage": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "category": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "sku": {
                    "type": "string"
                }
            },
            "required": ["name"]
        },
        "image_url": {
            "type": "string"
        }
    },
    "required": ["id", "metadata"]
} 